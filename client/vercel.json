{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install --no-fund --no-audit --no-optional",
        "buildCommand": "chmod +x ./node_modules/.bin/react-scripts && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ]
}
